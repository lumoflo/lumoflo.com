{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@server/*": [
        "./apps/backend/src/*"
      ],
      "@b-prisma/*": [
        "./apps/backend/prisma/*"
      ],
      "@web/*": [
        "./apps/website/*"
      ]
    }
  }
}